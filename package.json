{
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "clean:workspace": "rm -rf node_modules",
    "clean:client": "rm -rf client/node_modules",
    "clean:server": "rm -rf server/node_modules",
    "clean:games": "rm -rf games/node_modules",
    "clean": "yarn clean:workspace && yarn clean:client && yarn clean:server && yarn clean:games",
    "ci": "yarn clean && yarn install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@4.0.2"
}